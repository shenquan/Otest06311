<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:background="@drawable/bg_homepage_item"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/bell"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="10dip"
                    android:src="@drawable/bell" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="end"
                    android:padding="10dip"
                    android:src="@drawable/setting" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/my"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:padding="10dip"
                android:src="@drawable/main_title_my" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/homepage_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:text="天津正丽牙科"
                android:textColor="#805E5E"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/homepage_company_solgan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="爱牙齿 爱生活"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/homepage_points_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="30"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/homepage_points_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="积分"
                    android:textColor="#805E5E" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/homepage_follow_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="1"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/homepage_follow_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="关注"
                    android:textColor="#805E5E" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/homepage_fan_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="121"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/homepage_fan_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="粉丝"
                    android:textColor="#805E5E" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/homepage_achievement_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="59"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/homepage_achievement_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="成就"
                    android:textColor="#805E5E" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homepage_content_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/homepage_case_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/homepage_case_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="案例"
                android:textColor="#805E5E"/>

            <View
                android:id="@+id/homepage_case_title_view"
                android:layout_width="40dp"
                android:layout_height="3px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="#D7D7D7" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/homepage_lecture_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/homepage_lecture_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="讲座"
                android:textColor="#805E5E" />

            <View
                android:id="@+id/homepage_lecture_title_view"
                android:layout_width="40dp"
                android:layout_height="3px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="#D7D7D7" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/homepage_dynamic_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/homepage_dynamic_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="动态"
                android:textColor="#805E5E" />

            <View
                android:id="@+id/homepage_dynamic_title_view"
                android:layout_width="40dp"
                android:layout_height="3px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="#D7D7D7" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/homepage_public_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/homepage_publish_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="发布"
                android:textColor="#805E5E" />

            <View
                android:id="@+id/homepage_publish_title_view"
                android:layout_width="40dp"
                android:layout_height="3px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="#D7D7D7" />
        </LinearLayout>
    </LinearLayout>
    

     <FrameLayout
        android:id="@+id/frame_homepage_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/frameMenu"
        android:layout_below="@+id/homepage_content_title" >

    </FrameLayout>

</LinearLayout>