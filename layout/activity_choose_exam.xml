<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
    	android:layout_marginTop="36dip"  
        >
        
        <EditText 
            android:id="@+id/exam_search"
            android:layout_width="250dp"  
        android:layout_height="36dip"  
        android:background="@drawable/edittext"  
        android:padding="5dip"  
    	android:layout_marginLeft="10dip"
    	android:layout_centerVertical="true"
    	android:textColorHint="#AAAAAA"  
    	android:textSize="15dip"  
    	android:singleLine="true"  
    	android:hint="请输入..."  />
        <Button 
            android:id="@+id/exam_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查找"
            android:textColor="#FFFFFF"
            android:layout_alignTop="@+id/exam_search"
            android:layout_alignBottom="@+id/exam_search"
    	android:layout_centerVertical="true"
    	android:layout_marginLeft="10dip"
			android:layout_toRightOf="@+id/exam_search"
			android:background="@drawable/btn"            
            />
    </RelativeLayout>
    <ListView 
        android:id="@+id/exam_type"
    	android:layout_width="fill_parent"
        android:layout_height="match_parent"
        ></ListView>
</LinearLayout>
