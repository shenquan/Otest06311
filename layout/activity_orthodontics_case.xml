<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题栏 -->

    <LinearLayout
        android:id="@+id/title_case"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="#17B4EC"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/menu_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:src="@drawable/menu_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/orthodontics_title_pic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="内收前牙配合修复关闭牙关间隙"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="63dp"
        android:background="@color/skin_tabbar_bg"
        android:orientation="horizontal" >

        <!-- 病例综述 -->

        <LinearLayout
            android:id="@+id/layout_case_overview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/orthodontics_case_overview" />

            <TextView
                android:id="@+id/layout_case_overview_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:text="病例综述"
                android:textColor="#17B4EC"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 口内照 -->

        <LinearLayout
            android:id="@+id/layout_intraoral_film"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="top|center"
                android:src="@drawable/orthodotics_intraoral_film" />

            <TextView
                android:id="@+id/layout_intraoral_film_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:text="口内照片"
                android:textColor="#17B4EC"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 方案动画 -->

        <LinearLayout
            android:id="@+id/layout_design_animation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="top|center"
                android:src="@drawable/orthodotics_design_animation" />

            <TextView
                android:id="@+id/layout_design_animation_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:text="方案动画"
                android:textColor="#17B4EC"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- x光片 -->

        <LinearLayout
            android:id="@+id/layout_xray_film"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="top|center"
                android:src="@drawable/orthodotics_xray_film" />

            <TextView
                android:id="@+id/layout_xray_film_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:text="x光片"
                android:textColor="#17B4EC"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_orthodotics_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@drawable/orthodotics_case_overview_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/orthodotics_intraoral_film_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/orthodotics_intraoral_film_content" />

        <ImageView
            android:id="@+id/orthodotics_xray_film_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/orthodotics_xray_film_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_animation_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/orthodotics_design_animation_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/orthodontics_comparison_top" />

        <!-- 加载Gif图片 -->

        <com.magicalign.OrthoLink.CustomView.GifShowView
            android:id="@+id/tooth_animation_simulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/animation_simulation"
            />

        <LinearLayout
            android:id="@+id/layout_gif_play_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp" >

            <!-- 控制gif播放的按钮 -->

            <ImageView
                android:id="@+id/gif_play_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/gif_play_image"
                android:visibility="visible" 
                android:scaleType="fitXY"/>
            <!-- 暂停gif播放的按钮 -->

            <ImageView
                android:id="@+id/gif_pause_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/gif_pause_image"
                android:scaleType="fitXY"
                android:visibility="gone" />
            <!-- 控制gif播放的seekbar -->

            <SeekBar
                android:id="@+id/gif_play_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="55dp"
                android:paddingLeft="15dp"
                android:max="255"
                
                 />
        </LinearLayout>

        <TextView
            android:id="@+id/seekbar_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="0%" />
    </LinearLayout>

</LinearLayout>