<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
 <LinearLayout
     			android:id="@+id/main_title"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#17B4EC"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
				<LinearLayout
				    android:id="@+id/layout_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

   					 <ImageView
   					     android:layout_width="40dp"
   					     android:layout_height="40dp"
   					     android:layout_gravity="center_horizontal"
   					     android:layout_marginTop="6dp"
   					     android:src="@drawable/main_title_my" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/exam_explaindetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="选医院"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="90px"
                        android:layout_height="3px"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#C4C4C4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="找专家"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="90px"
                        android:layout_height="3px"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:background="#C4C4C4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="专家问答"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="90px"
                        android:layout_height="3px"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:background="#C4C4C4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="人才"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="90px"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="3px"
                        android:layout_marginTop="5dp"
                        android:background="#C4C4C4" />
                </LinearLayout>
            </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/frameMenu"
        android:layout_below="@+id/main_title" >

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameMenu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/skin_tabbar_bg"
            android:orientation="horizontal" >

            <!-- 朋友 -->

            <LinearLayout
                android:id="@+id/layout_friend"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:src="@drawable/main_menu_friend_select" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="@string/Main_Friend"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 发现 -->

            <LinearLayout
                android:id="@+id/layout_case_history"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" 
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_case_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:src="@drawable/main_menu_find_select" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="@string/Main_Case_History"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 留白 -->

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </FrameLayout>

            <!-- 预约 -->

            <LinearLayout
                android:id="@+id/layout_order"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:src="@drawable/main_menu_appointment_select" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="@string/Main_Order"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 头条 （论坛）-->

            <LinearLayout
                android:id="@+id/layout_headline"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:src="@drawable/main_menu_forum_select" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="@string/Main_Headline"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
                
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/black" >
        </LinearLayout> 
    </FrameLayout>

    <!-- 主页按钮背景 -->

    <ImageView
        android:id="@+id/toggle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/frameMenu"
        android:layout_centerInParent="true"
        android:src="@drawable/main_menu_mian" />

    <!-- 主页 -->
    <TextView 
        android:id="@+id/hostpage_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/frameMenu"
        android:layout_centerInParent="true"
        android:src="@drawable/skin_tabbar_icon_select"
        android:text="@string/Main_find"
        android:gravity="center"
        />

<!--     <ImageView
        android:id="@+id/hostpage_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/frameMenu"
        android:layout_centerInParent="true"
        android:src="@drawable/skin_tabbar_icon_select" /> -->

</RelativeLayout>

